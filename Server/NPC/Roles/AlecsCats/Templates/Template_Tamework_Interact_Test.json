    },
    "InteractSoundDefend": {
      "Value": "SFX_Torch_Swing_Right_Local",
      "Description": "Sound to play when switching to Defend."
    },
    "InteractSoundFeed": {
      "Value": "SFX_Torch_Swing_Right_Local",
      "Description": "Sound to play when feeding."
    },
    "InteractSoundPickUp": {
      "Value": "SFX_Tamework_Poof",
      "Description": "Sound to play when picking up."
    },
    "IsMountable": {
      "Value": false,
      "Description": "Whether this NPC can be mounted."
    },
    "IsHarvestable": {
      "Value": false,
      "Description": "Whether this NPC can be 'harvested'. This includes shearing, milking, etc."
    },
    "HarvestInteractionContext": {
      "Value": "",
