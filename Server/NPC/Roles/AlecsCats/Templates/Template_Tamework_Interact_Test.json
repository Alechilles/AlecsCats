    },
    "HarvestSound": {
      "Value": "SFX_Sheep_Sheared",
      "Description": "The sound that plays when NPC is harvested."
    },
    "HarvestTimeout": {
      "Value": [
        "PT45M",
        "PT1H"
      ],
      "Description": "The minimum time between consecutive harvests. Expressed as an ISO-8601 time period range."
    },
    "LovedItems": {
      "Value": [
        "Plant_Fruit_Apple"
      ],
      "TypeHint": "String",
      "Description": "The list of items that are deemed very attractive."
    },
    "TestItemsInHandParam": {
      "Value": [
        "Plant_Fruit_Apple"
      ],
      "TypeHint": "String",
      "Description": "ItemsParam list for ItemsInHand requirement (test)."
    },
    "TestItemsInInventoryParam": {
      "Value": [
        "Plant_Fruit_Apple"
      ],
      "TypeHint": "String",
      "Description": "ItemsParam list for ItemsInInventory requirement (test)."
    },
    "TestItemsEquippedParam": {
      "Value": [
        "Armor_Wool_Head"
      ],
      "TypeHint": "String",
      "Description": "ItemsParam list for ItemsEquipped requirement (test). Replace with an equipped item."
    },
    "TestAlarmParam": {
      "Value": "Harvest_Ready",
      "Description": "AlarmParam name used for AlarmState requirements (test)."
    },
    "TestInteractionContextParam": {
      "Value": "Tamework_Test_Context",
      "Description": "ContextParam value used for InteractionContext requirements (test)."
    },
    "TestTameItemsParam": {
      "Value": [
        "Plant_Fruit_Apple"
      ],
      "TypeHint": "String",
      "Description": "ItemsParam list for Tame interaction (test)."
    },
    "TestFeedItemsParam": {
      "Value": "[{\"Item\":\"Plant_Fruit_Apple\",\"Heal\":2.0},{\"Item\":\"Plant_Fruit_Apple\"}]",
      "Description": "JSON array string for Feed ItemsParam (items with optional Heal)."
    },
    "InteractionConfigId": {
      "Value": "",
      "Description": "Optional override for Action_Tamework_Interact."
    }
  },
  "MotionControllerList": [
    {
      "Type": "Walk",
      "MaxWalkSpeed": {
        "Compute": "MaxSpeed"
      },
      "Gravity": 15,
      "RunThreshold": {
        "Compute": "RunThreshold"
      },
      "RunThresholdRange": 0.05,
      "MaxFallSpeed": 15,
      "MinJumpHeight": {
        "Compute": "MinJumpHeight"
      },
      "MaxRotationSpeed": {
        "Compute": "MaxRotationSpeed"
      },
      "Acceleration": 100,
      "DescentAnimationType": "Fall",
      "DescentSteepness": 2.5,
      "DescentBlending": 1,
      "JumpDescentSteepness": 8,
      "MaxClimbHeight": {
        "Compute": "ClimbHeight"
      }
    }
  ],
  "MaxHealth": {
    "Compute": "MaxHealth"
  },
  "Appearance": {
    "Compute": "Appearance"
  },
  "DefaultPlayerAttitude": "Neutral",
  "DefaultNPCAttitude": "Ignore",
  "StateTransitions": [
    {
      "States": [
        {
          "From": [
            "Idle",
            "Hold"
          ],
          "To": [
            "Sleep"
          ]
        }
      ],
      "Actions": {
        "Reference": "Component_ActionList_Sleep"
      }
    },
    {
      "States": [
        {
          "From": [
            "Sleep"
          ],
          "To": [
            "Idle",
            "Hold",
            "Defend"
          ]
        }
      ],
      "Actions": {
        "Reference": "Component_ActionList_Wake"
      }
    }
  ],
  "Instructions": [
    {
      "$Comment": "Validation-only state setters (disabled).",
      "Enabled": false,
      "Actions": [
        {
          "Type": "State",
          "State": "Idle"
        },
        {
          "Type": "State",
          "State": "Hold"
        },
        {
          "Type": "State",
          "State": "Defend"
        },
        {
          "Type": "State",
          "State": "Sleep"
        },
        {
          "Type": "State",
          "State": "$Harvest"
        }
      ]
    },
    {
      "Sensor": {
        "Type": "TameworkHook",
        "HookId": "Test",
        "Consume": true
      },
      "Actions": [
        {
          "Type": "SpawnParticles",
          "Offset": [
            0,
            1,
            0
          ],
          "ParticleSystem": {
            "Compute": "HarvestParticles"
          }
        }
      ]
    },
    {
      "Sensor": {
        "Type": "State",
        "State": "Idle"
      },
      "Instructions": [
        {
          "Reference": "Component_Tamework_Instruction_Follow_Simple_TP",
          "Modify": {
            "MasterTargetSlot": {
              "Compute": "MasterTargetSlot"
            }
          }
        }
      ]
    },
    {
      "Sensor": {
        "Type": "State",
        "State": "Hold"
      },
      "Instructions": [
        {
          "Reference": "Component_Tamework_Instruction_Hold",
          "Modify": {
            "_ExportStates": [
              "Sleep"
            ],
            "DayFlavorAnimation": {
              "Compute": "DayFlavorAnimation"
            },
            "DayTimePeriod": {
              "Compute": "DayTimePeriod"
            },
            "NightFlavorAnimation": {
              "Compute": "NightFlavorAnimation"
            },
            "DayTimeNapWeight": {
              "Compute": "DayTimeNapWeight"
            },
            "AlwaysSleepAtNight": {
              "Compute": "AlwaysSleepAtNight"
            },
            "HearingRange": {
              "Compute": "HearingRange"
            }
          }
        }
      ]
    },
    {
      "Sensor": {
        "Type": "State",
        "State": "Defend"
      },
      "Instructions": [
        {
          "Reference": "Component_Tamework_Instruction_Defend",
          "Modify": {
            "HardLeashDistance": {
              "Compute": "HardLeashDistance"
            },
            "AlertedRange": {
              "Compute": "AlertedRange"
            },
            "ViewSector": {
              "Compute": "ViewSector"
            },
            "HearingRange": {
              "Compute": "HearingRange"
            },
            "AbsoluteDetectionRange": {
              "Compute": "AbsoluteDetectionRange"
            },
            "ViewRange": {
              "Compute": "ViewRange"
            },
            "Attack": {
              "Compute": "Attack"
            },
            "AttackDistance": {
              "Compute": "AttackDistance"
            }
          }
        }
      ]
    },
    {
      "Sensor": {
        "Type": "State",
        "State": "Sleep"
      },
      "Instructions": [
        {
          "Reference": "Component_Tamework_Instruction_Sleep",
          "Modify": {
            "_ExportStates": [
              "Defend",
              "Defend",
              "Hold",
              "Hold",
              "Hold"
            ],
            "DayTimePeriod": {
              "Compute": "DayTimePeriod"
            },
            "DayTimeNapWeight": {
              "Compute": "DayTimeNapWeight"
            },
            "DayTimeNapTimeRange": {
              "Compute": "DayTimeNapTimeRange"
            },
            "HearingRange": {
              "Compute": "HearingRange"
            },
            "FlockArray": {
              "Compute": "FlockArray"
            }
          }
        }
      ]
    },
    {
      "$Comment": "Minimal harvest behavior for testing.",
      "Sensor": {
        "Type": "State",
        "State": "$Harvest"
      },
      "Instructions": [
        {
          "Continue": true,
          "Sensor": {
            "Type": "Any",
            "Once": true
          },
          "Actions": [
            {
              "Type": "SpawnParticles",
              "Offset": [
                0,
                1,
                0
              ],
              "ParticleSystem": {
                "Compute": "HarvestParticles"
              }
            },
            {
              "Type": "PlaySound",
              "SoundEventId": {
                "Compute": "HarvestSound"
              }
            },
            {
              "Type": "SetAlarm",
              "Name": "Harvest_Ready",
              "DurationRange": {
                "Compute": "HarvestTimeout"
              }
            }
          ]
        },
        {
          "Enabled": {
            "Compute": "!isEmpty(HarvestDropList)"
          },
          "Continue": true,
          "Sensor": {
            "Type": "Any",
            "Once": true
          },
          "Actions": [
            {
              "Type": "DropItem",
              "DropList": {
                "Compute": "HarvestDropList"
              },
              "Distance": [
                0.2,
                0.5
              ],
              "Delay": [
                0,
                0
              ],
              "DropSector": [
                -360,
                360
              ],
              "PitchHigh": false,
              "ThrowSpeed": 14
            }
          ]
        },
        {
          "Actions": [
            {
              "Type": "State",
              "State": "Hold"
            }
          ]
        }
      ]
    }
  ],
  "InteractionInstruction": {
    "$Comment": "Isolated interaction flow for Action_Tamework_Interact.",
    "Enabled": {
      "Compute": "IsMountable || IsHarvestable || !isEmptyStringArray(LovedItems)"
    },
    "Instructions": [
      {
        "Continue": true,
        "Sensor": {
          "Type": "Any"
        },
        "Actions": [
          {
            "Type": "SetInteractable",
            "Interactable": true
          }
        ]
      },
      {
        "Sensor": {
          "Type": "HasInteracted"
        },
        "Actions": [
          {
            "Type": "LockOnInteractionTarget",
            "TargetSlot": {
              "Compute": "MasterTargetSlot"
            }
          },
          {
            "Type": "TameworkInteract",
            "ConfigId": {
              "Compute": "InteractionConfigId"
            }
          }
        ]
      },
      {
        "$Comment": "Contextual (left-click) harvest trigger.",
        "Enabled": {
          "Compute": "!isEmpty(HarvestInteractionContext)"
        },
        "Sensor": {
          "Type": "InteractionContext",
          "Context": {
            "Compute": "HarvestInteractionContext"
          }
        },
        "Actions": [
          {
            "Type": "LockOnInteractionTarget",
            "TargetSlot": {
              "Compute": "MasterTargetSlot"
            }
          },
          {
            "Type": "TameworkInteract",
            "ConfigId": {
              "Compute": "InteractionConfigId"
            }
          }
        ]
      }
    ]
  },
  "NameTranslationKey": {
    "Compute": "NameTranslationKey"
  }
}